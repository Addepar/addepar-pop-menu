{{#animated-popper
  isOpen=isOpen
  placement=placement
  modifiers=_popperModifiers
  renderInPlace=renderInPlace
  popperClass=(concat "ice-dropdown " _popperClass)
  onOpen="popoverOpened"
  onClose="popoverClosed"
}}
  <div class="ice-dropdown-content" tabindex="0">
    {{yield}}
  </div>
{{/animated-popper}}
